(function runMailScript(/* GlideRecord */ current, /* TemplatePrinter */ template,
/* Optional EmailOutbound */ email, /* Optional GlideRecord */ email_action,
/* Optional GlideRecord */ event) {
	
	var number = current.sysapproval.number;
	var watermark = email.watermark;
	var mailTo = '';
	var mail_add = new GlideRecord('sys_email_account');
	mail_add.addActiveQuery();
	mail_add.addQuery('type','smtp');
	mail_add.query();
	if(mail_add.next())
		mailTo = mail_add.from;
	
	var app_link = "mailto:" + mailTo + "?subject=Re:" + number + "%20-%20approve&body=" + watermark;
	var rej_link = "mailto:" + mailTo + "?subject=Re:" + number + "%20-%20reject&body=" + watermark;
	
	// Container with modern styling from Email 2
	template.print('<div style="margin: 30px 0; padding: 20px; background-color: #f5f5f5; border-radius: 5px; border: 1px solid #dee2e6;">');
	template.print('<p style="margin: 0 0 15px 0; font-weight: bold; color: #000000;">Please review this request and take appropriate action:</p>');
	
	// Approve button with Email 2 styling
	template.print('<a href="' + app_link + '" style="display: inline-block; padding: 12px 30px; background-color: #28a745; color: #ffffff; text-decoration: none; border-radius: 5px; margin-right: 10px; font-weight: 600;">Approve</a>');
	
	// Reject button with Email 2 styling
	template.print('<a href="' + rej_link + '" style="display: inline-block; padding: 12px 30px; background-color: #dc3545; color: #ffffff; text-decoration: none; border-radius: 5px; font-weight: 600;">Reject</a>');
	
	template.print('</div>');
	
})(current, template, email, email_action, event);

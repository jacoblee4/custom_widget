     color: #2c3e50;
     font-size: 18px;
     font-weight: 600;
     margin: 0 0 12px 0;
     display: flex;
     align-items: center;
     gap: 8px;
}
 .column-filter {
     margin-top: 0;
     display: flex;
     align-items: center;
     gap: 20px;
}
@media (max-width: 968px) {
    .disclaimer-columns {
        grid-template-columns: 1fr;
        gap: 20px;
    }
}
 @media (max-width: 968px) {
     .results-header {
         flex-direction: column;
    }
     .results-header-right {
         width: 100%;
    }
}

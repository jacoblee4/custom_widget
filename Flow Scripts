// Get parent record sys_id
var parentSysId = fd_data.subflow_inputs.signature_parent_record.sys_id.toString();

// Get child record sys_ids (may be null)
var creditSysId = null;
var nonCreditSysId = null;

if (fd_data.subflow_inputs.credit_record && fd_data.subflow_inputs.credit_record.sys_id) {
    creditSysId = fd_data.subflow_inputs.credit_record.sys_id.toString();
}

if (fd_data.subflow_inputs.non_credit_record && fd_data.subflow_inputs.non_credit_record.sys_id) {
    nonCreditSysId = fd_data.subflow_inputs.non_credit_record.sys_id.toString();
}

// Call Script Include method to format amounts
var helper = new SignatureHelper();
var formattedAmounts = helper.formatAuthorityAmountsForTask(parentSysId, creditSysId, nonCreditSysId);

return formattedAmounts;

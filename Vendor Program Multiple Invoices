	background-color: #b94a48;
}

.glyphicon {
	text-align: center;
	vertical-align: middle;
}

.badge {
    font-size: .35em;
    position: absolute;
    top: -.75em;
    right: -.75em;
    width: 2em;
    height: 2em;
    text-align: center;
}

.a-viewurl {
	color: black;
}

.a-viewurl:hover {
	text-decoration: underline;
}

